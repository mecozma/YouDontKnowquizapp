                </RadioGroup>

                <View style="@style/DividerStyle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/QuestionNumberStyle"
                    android:text="@string/question_9" />

                <TextView
                    style="@style/QuestionTextStyle"
                    android:text="@string/questionNine" />

                <RadioGroup
                    android:id="@+id/radio_group07"
                    style="@style/RadioGroupStyle"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/india10"
                        style="@style/RadioButtonStyle"
                        android:text="@string/questionNine1" />

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="@string/questionNine2" />

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="@string/questionNine3" />
                </RadioGroup>

                <View style="@style/DividerStyle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/QuestionNumberStyle"
                    android:text="@string/question_10" />

                <TextView
                    style="@style/QuestionTextStyle"
                    android:text="@string/questionTen" />

                <RadioGroup
                    android:id="@+id/radio_group08"
                    style="@style/RadioGroupStyle"
                    android:orientation="horizontal">

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="@string/questionTen1" />

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="@string/questionTen2" />

                    <RadioButton
                        android:id="@+id/india11"
                        style="@style/RadioButtonStyle"
                        android:text="@string/questionTen3" />
                </RadioGroup>

                <View style="@style/DividerStyle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/QuestionNumberStyle"
                    android:text="@string/question_11" />

                <TextView
                    style="@style/QuestionTextStyle"
                    android:text="@string/questionEleven" />

                <EditText
                    android:id="@+id/capital"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/your_answer_here"
                    android:inputType="textCapWords" />

                <View style="@style/DividerStyle" />

            </LinearLayout>

            <TextView
                android:id="@+id/summary_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <Button
            android:id="@+id/submit_quiz"
            style="@style/BottomButtons"
            android:onClick="showScore"
            android:text="@string/hit_me" />

        <Button
            style="@style/BottomButtons"
            android:onClick="resetQuiz"
            android:text="@string/reset_quiz" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:autoLink="web"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="@string/my_portfolio_https_mecozma_github_io"
            android:textColor="#fff" />

    </LinearLayout>

</ScrollView>