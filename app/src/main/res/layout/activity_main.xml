<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/imageHeight"
            android:scaleType="centerCrop"
            android:src="@drawable/sunset" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/layoutPadding">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/lineSpacing"
                android:text="@string/welcomeTextView"
                android:textSize="@dimen/welcomeTextViewSize" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/nameTextMarginTop"
                android:text="@string/enter_your_name_below_to_start_the_quiz" />

            <EditText
                android:id="@+id/edit_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/your_name_here"
                android:inputType="textCapWords" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/QuestionNumberStyle"
                    android:text="@string/question_1" />

                <TextView
                    style="@style/QuestionTextStyle"
                    android:text="@string/questionOne" />

                <RadioGroup
                    android:id="@+id/radio_group00"
                    style="@style/RadioGroupStyle"
                    android:orientation="horizontal">

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="@string/questionOne1" />

                    <RadioButton
                        android:id="@+id/india1"
                        style="@style/RadioButtonStyle"
                        android:text="@string/questionOne2" />

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="@string/questionOne3" />
                </RadioGroup>

                <View style="@style/DividerStyle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/QuestionNumberStyle"
                    android:text="@string/question_2" />

                <TextView
                    style="@style/QuestionTextStyle"
                    android:text="@string/questionTwo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/india2"
                        style="@style/CheckboxStyle"
                        android:text="@string/questionTwo1" />

                    <CheckBox
                        android:id="@+id/india3"
                        style="@style/CheckboxStyle"
                        android:text="@string/questionTwo2" />

                    <CheckBox
                        android:id="@+id/indiaNull"
                        style="@style/CheckboxStyle"
                        android:text="@string/questionTwo3" />
                </LinearLayout>

                <View style="@style/DividerStyle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/QuestionNumberStyle"
                    android:text="@string/question_3" />

                <TextView
                    style="@style/QuestionTextStyle"
                    android:text="@string/questionThree" />

                <RadioGroup
                    android:id="@+id/radio_group01"
                    style="@style/RadioGroupStyle"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/india4"
                        style="@style/RadioButtonStyle"
                        android:text="@string/questionThree1" />

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="@string/questionThree2" />

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="@string/questionThree3" />
                </RadioGroup>

                <View style="@style/DividerStyle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/QuestionNumberStyle"
                    android:text="@string/question_4" />

                <TextView
                    style="@style/QuestionTextStyle"
                    android:text="@string/questionFour" />

                <RadioGroup
                    android:id="@+id/radio_group02"
                    style="@style/RadioGroupStyle"
                    android:orientation="horizontal">

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="@string/questionFour1" />

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="@string/questionFour2" />

                    <RadioButton
                        android:id="@+id/india5"
                        style="@style/RadioButtonStyle"
                        android:text="@string/questionFour3" />
                </RadioGroup>

                <View style="@style/DividerStyle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/QuestionNumberStyle"
                    android:text="@string/question_5" />

                <TextView
                    style="@style/QuestionTextStyle"
                    android:text="@string/questionFive" />

                <RadioGroup
                    android:id="@+id/radio_group03"
                    style="@style/RadioGroupStyle"
                    android:orientation="vertical">

                    <RadioButton
                        style="@style/RadioButtonStyle"
