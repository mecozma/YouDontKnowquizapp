<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBE9E7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sunset" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Welcome to you dont know series"
                android:textSize="24dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Enter your name below, to start the quiz" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your name here"
                android:id="@+id/edit_text_view"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/QuestionNumberStyle"
                    android:text="question #1" />

                <TextView
                    style="@style/QuestionTextStyle"
                    android:text="Which is the second largest english speaking population in the world?" />

                <RadioGroup
                    android:id="@+id/radio_group00"
                    style="@style/RadioGroupStyle"
                    android:orientation="horizontal">

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="U.S.A." />

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:id="@+id/india1"
                        android:text="India" />

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="United Kingdom" />
                </RadioGroup>

                <View
                    style="@style/DividerStyle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/QuestionNumberStyle"
                    android:text="question #2" />

                <TextView
                    style="@style/QuestionTextStyle"
                    android:text="Which of the following people have indian origins?" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        style="@style/CheckboxStyle"
                        android:id="@+id/india2"
                        android:text="Ben Kingsley" />

                    <CheckBox
                        style="@style/CheckboxStyle"
                        android:id="@+id/india3"
                        android:text="Freddie Mercury" />

                    <CheckBox
                        style="@style/CheckboxStyle"
                        android:id="@+id/indiaNull"
                        android:text="Donald Trump" />
                </LinearLayout>


                <View
                    style="@style/DividerStyle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/QuestionNumberStyle"
                    android:text="question #3" />

                <TextView
                    style="@style/QuestionTextStyle"
                    android:text="Which country the dolphins are treated as non-human persons?" />

                <RadioGroup
                    android:id="@+id/radio_group01"
                    style="@style/RadioGroupStyle"
                    android:orientation="horizontal">

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:id="@+id/india4"
                        android:text="India" />

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="Japan" />

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="Hawaii" />
                </RadioGroup>

                <View
                    style="@style/DividerStyle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/QuestionNumberStyle"
                    android:text="question #4" />

                <TextView
                    style="@style/QuestionTextStyle"
                    android:text="Which is the largest movie producer country in the world?" />

                <RadioGroup
                    android:id="@+id/radio_group02"
                    style="@style/RadioGroupStyle"
                    android:orientation="horizontal">

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="U.S.A." />

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="France" />

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:id="@+id/india5"
                        android:text="India" />
                </RadioGroup>

                <View
                    style="@style/DividerStyle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/QuestionNumberStyle"
                    android:text="question #5" />

                <TextView
                    style="@style/QuestionTextStyle"
                    android:text="Which of the following games have been invented in India?" />

                <RadioGroup
                    android:id="@+id/radio_group03"
                    style="@style/RadioGroupStyle"
                    android:orientation="vertical">

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="Cricket" />

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:id="@+id/india6"
                        android:text="Snakes and Ladders Game" />

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="Pool" />
                </RadioGroup>

                <View
                    style="@style/DividerStyle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/QuestionNumberStyle"
                    android:text="question #6" />

                <TextView
                    style="@style/QuestionTextStyle"
                    android:text="Buttons were invented by" />

                <RadioGroup
                    android:id="@+id/radio_group04"
                    style="@style/RadioGroupStyle"
                    android:orientation="horizontal">

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="Microsoft" />

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="Macintosh" />

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:id="@+id/india7"
                        android:text="indians" />
                </RadioGroup>

                <View
                    style="@style/DividerStyle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/QuestionNumberStyle"
                    android:text="question #7" />

                <TextView
                    style="@style/QuestionTextStyle"
                    android:text="Water on moon was discovered by:" />

                <RadioGroup
                    android:id="@+id/radio_group05"
                    style="@style/RadioGroupStyle"
                    android:orientation="horizontal">

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:id="@+id/india8"
                        android:text="India" />

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="Russia" />

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="U.S.A" />
                </RadioGroup>

                <View
                    style="@style/DividerStyle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/QuestionNumberStyle"
                    android:text="question #8" />

                <TextView
                    style="@style/QuestionTextStyle"
                    android:text="The largest number of vegetarians in the world are in:" />

                <RadioGroup
                    android:id="@+id/radio_group06"
                    style="@style/RadioGroupStyle"
                    android:orientation="horizontal">

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="China" />

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="Brazil" />

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:id="@+id/india9"
                        android:text="India" />
                </RadioGroup>

                <View
                    style="@style/DividerStyle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/QuestionNumberStyle"
                    android:text="question #9" />

                <TextView
                    style="@style/QuestionTextStyle"
                    android:text="Which is the world's second pharmaceutical industry by the volume of the pills produced?" />

                <RadioGroup
                    android:id="@+id/radio_group07"
                    style="@style/RadioGroupStyle"
                    android:orientation="horizontal">

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:id="@+id/india10"
                        android:text="India" />

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="U.S.A" />

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="China" />
                </RadioGroup>

                <View
                    style="@style/DividerStyle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/QuestionNumberStyle"
                    android:text="question #10" />

                <TextView
                    style="@style/QuestionTextStyle"
                    android:text="In which country the cotton was first spun" />

                <RadioGroup
                    android:id="@+id/radio_group08"
                    style="@style/RadioGroupStyle"
                    android:orientation="horizontal">

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="China" />

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="Persian Empire" />

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:id="@+id/india11"
                        android:text="India" />
                </RadioGroup>

                <View
                    style="@style/DividerStyle" />
            </LinearLayout>

            <TextView
                android:id="@+id/summary_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <Button
            style="@style/BottomButtons"
            android:id="@+id/submit_quiz"
            android:onClick="showScore"
            android:text="Hit me"/>

        <Button
           style="@style/BottomButtons"
            android:onClick="resetQuiz"
            android:text="Reset Quiz"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="My portfolio: https://mecozma.github.io/"
            android:autoLink="web"
            android:gravity="center"
            android:background="@color/colorPrimaryDark"
            android:textColor="#fff"/>
    </LinearLayout>
</ScrollView>