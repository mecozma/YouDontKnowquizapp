                    <RadioButton
                        android:id="@+id/india6"
                        style="@style/RadioButtonStyle"
                        android:text="@string/questionFive2" />

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="@string/questionFive3" />
                </RadioGroup>

                <View style="@style/DividerStyle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/QuestionNumberStyle"
                    android:text="@string/question_6" />

                <TextView
                    style="@style/QuestionTextStyle"
                    android:text="@string/questionSix" />

                <RadioGroup
                    android:id="@+id/radio_group04"
                    style="@style/RadioGroupStyle"
                    android:orientation="horizontal">

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="@string/questionSix1" />

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="@string/questionSix2" />

                    <RadioButton
                        android:id="@+id/india7"
                        style="@style/RadioButtonStyle"
                        android:text="@string/questionSix3" />
                </RadioGroup>

                <View style="@style/DividerStyle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/QuestionNumberStyle"
                    android:text="@string/question_7" />

                <TextView
                    style="@style/QuestionTextStyle"
                    android:text="@string/questionSeven" />

                <RadioGroup
                    android:id="@+id/radio_group05"
                    style="@style/RadioGroupStyle"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/india8"
                        style="@style/RadioButtonStyle"
                        android:text="@string/questionSeven1" />

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="@string/questionSeven2" />

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="@string/questionSeven3" />
                </RadioGroup>

                <View style="@style/DividerStyle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/QuestionNumberStyle"
                    android:text="@string/question_8" />

                <TextView
                    style="@style/QuestionTextStyle"
                    android:text="@string/questionEight" />

                <RadioGroup
                    android:id="@+id/radio_group06"
                    style="@style/RadioGroupStyle"
                    android:orientation="horizontal">

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="@string/questionEight1" />

                    <RadioButton
                        style="@style/RadioButtonStyle"
                        android:text="@string/questionEight2" />

                    <RadioButton
                        android:id="@+id/india9"
